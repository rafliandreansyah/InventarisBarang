<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/dip_20"
    app:cardCornerRadius="@dimen/dip_4"
    android:elevation="@dimen/dip_4"
    android:layout_marginVertical="@dimen/dip_8"
    xmlns:tools="http://schemas.android.com/tools">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dip_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Ciggarete Paper"
                style="@style/TextRegularPrimary"
                android:layout_weight="2"
                android:layout_gravity="start"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/dip_8"
                android:src="@drawable/ic_option"
                android:contentDescription="@string/icon_option" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Kode: M1232"
            style="@style/TextRegularSecondary"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dip_8"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
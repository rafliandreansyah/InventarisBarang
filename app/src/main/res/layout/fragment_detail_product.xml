<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.product.DetailProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/dip_16"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables,UselessParent">
                <ImageView
                    android:id="@+id/back_button_detail_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/icon_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_produk"
                    android:layout_marginStart="@dimen/dip_16"
                    style="@style/TextRegularPrimary"
                    android:textSize="22sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dip_30"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dip_30">

            <TextView
                android:id="@+id/tv_product_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Citreatt Specialities"
                android:textSize="18sp"
                style="@style/TextRegularPrimary"/>

            <TextView
                android:id="@+id/tv_product_code_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Kode: M133"
                android:textSize="12sp"
                style="@style/TextRegularPrimary"
                android:layout_marginTop="@dimen/dip_8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dip_8"
                android:background="@color/colorDivider"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/produk_item"
            style="@style/TextRegularPrimary"
            android:textSize="18sp"
            android:layout_marginHorizontal="@dimen/dip_20"
            android:layout_marginTop="@dimen/dip_20"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dip_16"
            tools:listitem="@layout/list_item_product"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_add_item_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dip_16"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@color/colorAccent"
        app:icon="@drawable/ic_add"
        android:text="@string/tambah"
        app:iconTint="@color/colorWhite"
        style="@style/TextRegularPrimaryWhite"/>

</FrameLayout>